<!-- Hero Section -->
<section
    class="h-screen bg-cover bg-center relative"
    style="background-image: url('/hero.jpg')"
>
    <div class="flex justify-center items-center h-full bg-black bg-opacity-40">
        <div class="text-center text-white">
            <h1 class="text-5xl font-bold mb-4">Discover Stunning Photos</h1>
            <p class="text-lg mb-6">Find the perfect image for your project</p>
            <a
                href="/login"
                class="bg-purple-500 text-white px-6 py-3 rounded hover:bg-purple-700"
                >Get Started</a
            >
        </div>
    </div>
</section>

<!-- Featured Images Section -->
<section class="container mx-auto p-6">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">
        Featured Images
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% topPhotos.forEach(photo => { %>
        <div class="rounded-lg overflow-hidden shadow-lg">
            <!-- <img
                src="/get-image<%= photo.watermarkImagePath?.split('uploads')[1] %>"
                alt="<%= photo.title %>"
                class="w-full h-48 object-cover"
            /> -->
            <div class="p-4">
                <h3 class="font-semibold"><%= photo.title %></h3>
                <p class="text-gray-600">$<%= photo.price %></p>
            </div>
        </div>
        <% }) %>
    </div>
</section>

<!-- Testimonials Section -->
<section class="bg-gray-100 py-6">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-4">
            What Our Users Say
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white p-4 rounded-lg shadow-md w-full">
                <p class="italic">
                    "A fantastic marketplace! I found the perfect images for my
                    project."
                </p>
                <p class="font-semibold mt-2">- Sarah Johnson</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-md w-full">
                <p class="italic">
                    "Great selection of high-quality photos. Highly recommend!"
                </p>
                <p class="font-semibold mt-2">- Michael Smith</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-md w-full">
                <p class="italic">
                    "Easy to use and amazing customer service."
                </p>
                <p class="font-semibold mt-2">- Emily Davis</p>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<%- include("./partials/footer") %>
