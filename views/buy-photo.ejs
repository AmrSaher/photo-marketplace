<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Buy Photo</title>
        <script src="https://www.paypal.com/sdk/js?client-id=AewZJuwZugv-6QwBdc2hEx45ooMP3DVHf0MOsDHsneHF7N8lPFL7lgHMoVQFq8gDGZbZ72ADV7mBVr2U"></script>
    </head>
    <body>
        <h1>Buy Photo</h1>
        <p>Photo ID: <%= photo.id %></p>
        <p>Price: $<%= photo.price %></p>
        <div id="paypal-button-container"></div>

        <script>
            let orderID;
            paypal
                .Buttons({
                    createOrder: async function (data, actions) {
                        return fetch("/photos/buy-photo", {
                            method: "post",
                            headers: {
                                "content-type": "application/json",
                            },
                            body: JSON.stringify({
                                photoId: "<%= photo.id %>", // Pass the photo ID from the server
                            }),
                        })
                            .then(function (res) {
                                return res.json();
                            })
                            .then(function (orderData) {
                                orderID = orderData.id;
                                return orderData.id;
                            });
                    },
                    onApprove: function (data, actions) {
                        console.log(data.orderID, orderID)
                        return fetch("/photos/capture-photo-payment", {
                            method: "post",
                            headers: {
                                "content-type": "application/json",
                            },
                            body: JSON.stringify({
                                orderId: data.orderID,
                            }),
                        })
                            .then(function (res) {
                                return res.json();
                            })
                            .then(function (orderData) {
                                if (orderData.success) {
                                    alert(
                                        "Transaction completed successfully!"
                                    );
                                    // Optionally, redirect to a success page or update UI
                                } else {
                                    alert("Transaction failed.");
                                }
                            });
                    },
                })
                .render("#paypal-button-container");
        </script>
    </body>
</html>
